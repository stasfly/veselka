<h2><%= t('.history') %></h2>

<table>
  <thead>
    <tr>
      <th><%= t('.date') %></th>
      <th><%= t('.id') %></th>
      <th><%= t('.sum') %></th>
      <th><%= t('.details') %></th>
    </tr>
  </thead>
  <% @orders.map do |order| %>
    <tbody>
      <td><%= order.created_at %></td>
      <td><%= order.id %></td>
      <td><%= order.cost %></td>
      <td><%= link_to t('buttons.show'), order_path(order) %></td>
      <td><%= order.roles.pluck('name') %></td>
    <tbody>
  <% end %>
</table>
