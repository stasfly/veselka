<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: t('devise.passwords.edit.new_password'),
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} #{t('devise.passwords.edit.characters_minimum')}" if @minimum_password_length),
                input_html: { autocomplete: t('devise.passwords.edit.new_password') } %>
    <%= f.input :password_confirmation,
                label: t('devise.passwords.edit.characters_minimum'),
                required: true,
                input_html: { autocomplete: t('devise.passwords.edit.confirm_new_password') } %>
  </div>

  <%= render partial: 'shared/recaptcha', locals: { action: 'edit_password' } %>

  <div class="form-actions btn-container btn-width-450">
    <%= f.button :submit, t('devise.passwords.edit.change_my_password'), class: 'submit-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
