<% environment = Rails.env.production? ? 'production' : 'development' %>
<% site_key = Rails.application.credentials.recaptcha[environment].v3_site_key %>
<script src="https://www.google.com/recaptcha/api.js?render=reCAPTCHA_site_key"></script>
<%= Time.now %>
<h2><%= t('devise.sessions.new.sign_in') %></h2>
<% instance_variable_names.inspect %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: t('activerecord.attributes.user.email') } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: t('activerecord.attributes.user.current_password') } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <% if params[:show_checkbox_recaptcha] %>
    <%= recaptcha_tags %>
  <% else %>
    
    <%# <%= turbo_frame_tag 'recaptchas', data: { turbo_temporary: true } do %>
      <%= recaptcha_v3 action: 'login', site_key: site_key %>
    <%# end %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, t('devise.shared.links.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
