
<h2><%= t('devise.sessions.new.sign_in') %></h2>
<% instance_variable_names.inspect %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false, turbolinks: false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: t('activerecord.attributes.user.email') } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: t('activerecord.attributes.user.current_password') } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <%= render partial: 'shared/recaptcha', locals: { action: 'login' } %>

  <div class="form-actions">
    <%= f.button :submit, t('devise.shared.links.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
